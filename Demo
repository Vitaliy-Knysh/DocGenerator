        self.textEdit_3.setGeometry(QtCore.QRect(390, 250, 301, 41))
        self.textEdit_3.setObjectName("textEdit_3")

        self.label_4 = QtWidgets.QLabel(self.centralwidget)
        self.label_4.setGeometry(QtCore.QRect(60, 320, 331, 71))
        font = QtGui.QFont()
        font.setPointSize(10)
        self.label_4.setFont(font)
        self.label_4.setObjectName("label_4")
        self.textEdit_4 = QtWidgets.QTextEdit(self.centralwidget)
        self.textEdit_4.setGeometry(QtCore.QRect(390, 340, 301, 41))
        self.textEdit_4.setObjectName("textEdit_4")

        self.label_5 = QtWidgets.QLabel(self.centralwidget)
        self.label_5.setGeometry(QtCore.QRect(60, 400, 331, 71))
        font = QtGui.QFont()
        font.setPointSize(10)
        self.label_5.setFont(font)
        self.label_5.setObjectName("label_5")
        self.textEdit_5 = QtWidgets.QTextEdit(self.centralwidget)
        self.textEdit_5.setGeometry(QtCore.QRect(390, 420, 301, 41))
        self.textEdit_5.setObjectName("textEdit_5")

        self.label_6 = QtWidgets.QLabel(self.centralwidget)
        self.label_6.setGeometry(QtCore.QRect(60, 230, 331, 71))
        font = QtGui.QFont()
        font.setPointSize(10)
        self.label_6.setFont(font)
        self.label_6.setObjectName("label_6")
        self.textEdit_6 = QtWidgets.QTextEdit(self.centralwidget)
        self.textEdit_6.setGeometry(QtCore.QRect(390, 250, 301, 41))
        self.textEdit_6.setObjectName("textEdit_6")


        self.btn1 = QtWidgets.QPushButton(self.centralwidget)  # первая кнопка, "день рождения"
        self.btn1.setGeometry(QtCore.QRect(260, 160, 201, 51))
        self.btn1.setObjectName("pushButton")
        self.btn1.clicked.connect(self.choice1)

        self.btn2 = QtWidgets.QPushButton(self.centralwidget)  # вторая кнопка, "запрос"
        self.btn2.setGeometry(QtCore.QRect(260, 230, 201, 51))
        self.btn2.setObjectName("pushButton_2")
        self.btn2.clicked.connect(self.choice2)


        self.btn3 = QtWidgets.QPushButton(self.centralwidget)  # третья кнопка, "справка с места работы"
        self.btn3.setGeometry(QtCore.QRect(260, 300, 201, 51))
        self.btn3.setObjectName("pushButton_3")
        self.btn3.clicked.connect(self.choice3)

        self.btn4 = QtWidgets.QPushButton(self.centralwidget)  # кнопка "создать документ"
        self.btn4.setGeometry(QtCore.QRect(340, 480, 111, 41))
        self.btn4.setObjectName("pushButton_4")
        self.btn4.clicked.connect(self.create)


        MainWindow.setCentralWidget(self.centralwidget)  # ???
        self.menubar = QtWidgets.QMenuBar(MainWindow)
        self.menubar.setGeometry(QtCore.QRect(0, 0, 800, 26))
        self.menubar.setObjectName("menubar")
        MainWindow.setMenuBar(self.menubar)
        self.statusbar = QtWidgets.QStatusBar(MainWindow)
        self.statusbar.setObjectName("statusbar")
        MainWindow.setStatusBar(self.statusbar)

        self.label.hide()
