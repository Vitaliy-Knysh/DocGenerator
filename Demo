        self.btn4.hide()

        self.retranslateUi(MainWindow)
        QtCore.QMetaObject.connectSlotsByName(MainWindow)

    def retranslateUi(self, MainWindow):
        _translate = QtCore.QCoreApplication.translate
        MainWindow.setWindowTitle(_translate("MainWindow", "MainWindow"))
        self.labelStart.setText(_translate("MainWindow", "Выберите тип документа"))
        self.label.setText(_translate("MainWindow", "Укажите название итогового документа:"))
        self.label_2.setText(_translate("MainWindow", "Укажите название отдела:"))
        self.label_3.setText(_translate("MainWindow", "Укажите имя сотрудника:"))
        self.label_4.setText(_translate("MainWindow", "Укажите имя начальника отдела:"))
        self.label_5.setText(_translate("MainWindow", "Укажите название целевого отдела:"))
        self.label_6.setText(_translate("MainWindow", "Укажите необходимые комплектующие"))
        self.btn1.setText(_translate("MainWindow", "Поздравление с днем рождения"))
        self.btn2.setText(_translate("MainWindow", "Справка с места работы"))
        self.btn3.setText(_translate("MainWindow", "Запрос на комплектующие"))
        self.btn4.setText(_translate("MainWindow", "Создать"))

    ########################                     АДСКИЙ КОСТЫЛЬ, ПЕРЕДЕЛАТЬ                  ########################
    def choice1(self, MainWindow):  # выбран вариант 1
        self.btn1.hide()
        self.btn2.hide()
        self.btn3.hide()
        self.btn4.show()
        self.labelStart.hide()
        self.label.show()
        self.label_2.show()
        self.label_3.show()
        self.label_4.show()
        self.textEdit.show()
        self.textEdit_2.show()
        self.textEdit_3.show()
        self.textEdit_4.show()

    def choice2(self, MainWindow):  # выбран вариант 2
        self.template = 'Workplace.docx'
        self.btn1.hide()
        self.btn2.hide()
        self.btn3.hide()
        self.btn4.show()
        self.labelStart.hide()
        self.label.show()
        self.label_2.show()
        self.label_3.show()
        self.label_4.show()
        self.label_5.show()
        self.textEdit.show()
        self.textEdit_2.show()
        self.textEdit_3.show()
        self.textEdit_4.show()
        self.textEdit_5.show()

    def choice3(self, MainWindow):  # выбран вариант 3
        self.template = 'Request.docx'
        self.btn1.hide()
        self.btn2.hide()
        self.btn3.hide()
        self.btn4.show()
        self.labelStart.hide()
        self.label.show()
        self.label_2.show()
        self.label_6.show()
        self.label_4.show()
        self.textEdit.show()
        self.textEdit_2.show()
        self.textEdit_6.show()
        self.textEdit_4.show()

    def create(self, MainWindow):
        self.docName = self.textEdit.toPlainText()
        self.deptName = self.textEdit_2.toPlainText()
        self.employeeName = self.textEdit_3.toPlainText()
        self.headName = self.textEdit_4.toPlainText()
        self.supplyName = self.textEdit_5.toPlainText()
        self.supplyList = self.textEdit_6.toPlainText()
        self.doc = DocxTemplate(self.template)
        self.context = {'deptName': self.deptName, 'supplyName': self.supplyName,
                        'supplyList': self.supplyList, 'headName': self.headName,
                        'enployeeName': self.employeeName}
        self.doc.render(self.context)
        self.doc.save(self.docName + '.docx')


if __name__ == "__main__":
    import sys
    app = QtWidgets.QApplication(sys.argv)
    MainWindow = QtWidgets.QMainWindow()
    ui = Ui_MainWindow()
    ui.setupUi(MainWindow)
    MainWindow.show()
    sys.exit(app.exec_())
