######################## СГЕНЕРИРОВАНО АВТОМАТИЧЕСКИ, НАДО РАЗОБРАТЬСЯ В КАЖДОЙ СТРОЧКЕ ########################
########################                  ПОЧЕМУ-ТО КЛАСС БЕЗ КОНСТРУКТОРА              ########################
class Ui_MainWindow(object):
    def setupUi(self, MainWindow):
        self.template = 'Birthday.docx'

        MainWindow.setObjectName("MainWindow")
        MainWindow.resize(800, 600)
        self.centralwidget = QtWidgets.QWidget(MainWindow)
        self.centralwidget.setObjectName("centralwidget")

        self.labelStart = QtWidgets.QLabel(self.centralwidget)  # надпись "выберите тип документа"
        self.labelStart.setGeometry(QtCore.QRect(224, 70, 271, 91))
        font14 = QtGui.QFont()
        font14.setPointSize(14)
        self.labelStart.setFont(font14)
        self.labelStart.setObjectName("labelStart")

        self.label = QtWidgets.QLabel(self.centralwidget)    # надпись "введите имя работника"
        self.label.setGeometry(QtCore.QRect(60, 60, 331, 71))
        font = QtGui.QFont()
        font.setPointSize(10)
        self.label.setFont(font)
        self.label.setObjectName("label")
        self.textEdit = QtWidgets.QTextEdit(self.centralwidget)
        self.textEdit.setGeometry(QtCore.QRect(390, 80, 301, 41))
        self.textEdit.setObjectName("textEdit")

        self.label_2 = QtWidgets.QLabel(self.centralwidget)
        self.label_2.setGeometry(QtCore.QRect(60, 150, 331, 71))
        font = QtGui.QFont()
        font.setPointSize(10)
        self.label_2.setFont(font)
        self.label_2.setObjectName("label_2")
        self.textEdit_2 = QtWidgets.QTextEdit(self.centralwidget)
        self.textEdit_2.setGeometry(QtCore.QRect(390, 170, 301, 41))
        self.textEdit_2.setObjectName("textEdit_2")

        self.label_3 = QtWidgets.QLabel(self.centralwidget)
        self.label_3.setGeometry(QtCore.QRect(60, 230, 331, 71))
        font = QtGui.QFont()
        font.setPointSize(10)
        self.label_3.setFont(font)
        self.label_3.setObjectName("label_3")
